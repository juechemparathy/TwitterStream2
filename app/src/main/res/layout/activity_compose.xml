<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yahoo.twitterstream.ComposeActivity"
    android:background="@android:color/black">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etTweet"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="textAutoCorrect"
        android:maxLength="140"
        android:cursorVisible="true"
        android:background="@android:color/white"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btTweet"
        android:layout_marginTop="56dp"
        android:onClick="postTweet"
        android:text="Tweet"
        android:textColor="@android:color/white"
        android:height="40dp"
        android:width="80dp"
        android:layout_below="@+id/etTweet"
        android:layout_alignRight="@+id/etTweet"
        android:layout_alignEnd="@+id/etTweet"
        android:layout_marginRight="66dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btCancel"
        android:onClick="cancelTweet"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:height="40dp"
        android:width="80dp"
        android:layout_alignTop="@+id/btTweet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="61dp"
        />

</RelativeLayout>
